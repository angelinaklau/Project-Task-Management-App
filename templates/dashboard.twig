{% extends 'layouts/master.twig' %}
{% block title %}Daftar Buku{% endblock %}

{% block content %}
<h1 class="mb-4">Selamat Datang, {{ user.name }}! ðŸ‘‹</h1>

<div class="row g-4">
  <!-- Widget 1: Total Users -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm p-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Total Users</p>
          <h4 class="fw-bold">{{ totalUsers|number_format }}</h4>
          <a href="/users" class="text-decoration-none text-primary small">View All &rarr;</a>
        </div>
        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
          <i class="bi bi-person-fill fs-4"></i>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span class="text-success fw-semibold">+8%</span>
        <span class="text-muted small">this month</span>
      </div>
    </div>
  </div>

  <!-- Widget 2: Total Boards -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm p-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Total Boards</p>
          <h4 class="fw-bold">{{ totalBoards|number_format }}</h4>
          <a href="/boards" class="text-decoration-none text-primary small">View All &rarr;</a>
        </div>
        <div class="bg-info bg-opacity-10 text-info rounded-circle p-3">
          <i class="bi bi-kanban fs-4"></i>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span class="text-success fw-semibold">+5%</span>
        <span class="text-muted small">this month</span>
      </div>
    </div>
  </div>

  <!-- Widget 3: Total Tasks -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm p-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Total Tasks</p>
          <h4 class="fw-bold">{{ totalTasks|number_format }}</h4>
          <a href="#" class="text-decoration-none text-primary small">View All &rarr;</a>
        </div>
        <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
          <i class="bi bi-card-checklist fs-4"></i>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span class="text-success fw-semibold">+12%</span>
        <span class="text-muted small">this month</span>
      </div>
    </div>
  </div>

  <!-- Widget 4: Task Statuses -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm p-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <p class="mb-1 text-muted">Total Statuses</p>
          <h4 class="fw-bold">{{ totalStatuses|number_format }}</h4>
          <a href="/status-task" class="text-decoration-none text-primary small">View All &rarr;</a>
        </div>
        <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3">
          <i class="bi bi-layers-fill fs-4"></i>
        </div>
      </div>
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span class="text-success fw-semibold">+3%</span>
        <span class="text-muted small">this month</span>
      </div>
    </div>
  </div>
</div>


{% endblock %}
