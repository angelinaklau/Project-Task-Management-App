{% extends 'layouts/master.twig' %}
{% block title %}Daftar Board{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Daftar Board</h2>
  <a href="/boards/create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Tambah Board
  </a>
</div>


<table  class="table table-striped table-bordered datatable">
  <thead class="table-dark">
    <tr>
      <th>No</th>
      <th>Nama</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    {% for list in lists %}
      <tr>
        <td>{{ loop.index }}</td>
        <td>{{ list.name }}</td>
        <td>
            <a href="/boards/{{ list.id }}/edit" class="btn btn-sm btn-warning me-1">
                <i class="fas fa-edit"></i>
            </a>
            <form method="post" action="/boards/{{ list.id }}/delete" class="d-inline" onsubmit="return confirm('Yakin ingin menghapus data ini?');">
                <button type="submit" class="btn btn-sm btn-danger">
                <i class="fas fa-trash-alt"></i>
                </button>
            </form>
            <a href="/boards/{{ list.id }}/show" class="btn btn-sm btn-primary me-1">
                <i class="bi bi-info-square"></i>
            </a>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
